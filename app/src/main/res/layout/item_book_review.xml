<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="@android:color/white"
    android:layout_marginBottom="5dp"
    android:id="@+id/bubble_layout_part">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_small_profile"
        android:src="@drawable/writing"
        android:padding="3dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="4dp"/>

    <LinearLayout

        android:id="@+id/bubble_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_small_profile"
        android:background="@drawable/other_msg">

        <TextView
            android:id="@+id/tv_UserName"
            android:text="Kaung Htet Tin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView

            android:id="@+id/tv_Review"
            android:textColor="@android:color/black"
            android:text="This video is so cool"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_ReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read more.."
            android:layout_gravity="end"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/bubble_layout"
        android:layout_marginStart="10dp"
        android:layout_below="@id/bubble_layout"/>
</RelativeLayout>