<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="160dp"
    android:padding="4dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/bg_main">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_marginTop="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_header_icon"
        android:padding="3dp"
        android:src="@drawable/ic_feather"/>

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@id/iv_header"
        android:layout_alignTop="@id/iv_header"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaung Htet Tin"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tv_header_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textIsSelectable="true"
            android:text="id - 123456789"
            android:textColor="@android:color/white" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_point"
        android:layout_width="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_point"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/tv_header_point"
        android:layout_width="wrap_content"
        android:minWidth="25dp"
        android:layout_height="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_header_icon"
        android:textSize="12sp"
        android:padding="2dp"
        android:layout_alignStart="@id/iv_point"
        android:layout_alignBottom="@id/iv_point"
        android:text="0"/>


</RelativeLayout>